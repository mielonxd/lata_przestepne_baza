@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
    var message = ViewData["check"];
}

<div class="text-left">
    <h1 class="display-4">Cześć @Model.Name</h1>
    <p>Podaj imię,nazwisko oraz rok urodzenia</p>
    <form method="post">
        <label asp-for="FizzBuzz.FirstName"></label><br />
        <input asp-for="FizzBuzz.FirstName"/><br />
        <b><span asp-validation-for="FizzBuzz.FirstName" class="text-danger"></span></b>
        <label asp-for="FizzBuzz.LastName"></label><br />
        <input asp-for="FizzBuzz.LastName"/><br />
        <label asp-for="FizzBuzz.Year"></label><br />
        <input asp-for="FizzBuzz.Year"/><br />
        <b><span asp-validation-for="FizzBuzz.Year"  class="text-danger"></span></b>
        <input type="submit" value="Zatwierdź" name="przycisk" class="btn btn-primary mb-2">
    </form>
    <div class="alert alert-success" role="alert">
       @message
    </div>
</div>